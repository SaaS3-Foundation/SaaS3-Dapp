{
  "name": "saas3-dapp",
  "version": "1.0.0",
  "repository": "git@github.com:SaaS3-Foundation/SaaS3-Dapp.git",
  "author": "Jupiteriana <xiong0201y@163.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .less,.js,.ts,.jsx,.tsx --fix frontend/src/",
    "style:lint": "stylelint \"frontend/src/**/*.{css,less}\" --fix --custom-syntax postcss-less ",
    "lint:staged": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "postcss-less": "^6.0.0",
    "stylelint": "^14.12.1",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-less": "^1.0.6",
    "stylelint-order": "^5.0.0"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "frontend/src/**/*.{css,less}": [
      "stylelint --fix --custom-syntax postcss-less",
      "git add"
    ]
  }
}
